{
    "name": "simple-noc-template",
    "version": "1.0.0",
    "description": "This is a template for implementing a NOC service built in NodeJS + TS following clean architecture principles, adapter pattern, domain-based pattern among others.",
    "main": "index.ts",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watchAll",
        "test:coverage": "jest --coverage",
        "build": "rimraf ./dist && tsc",
        "dev": "ts-node src/index.ts",
        "dev:watch": "tsnd --respawn --clear src/index.ts",
        "start": "npm run build && node dist/index.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.24",
        "@types/nodemailer": "^6.4.14",
        "jest": "^29.7.0",
        "prisma": "^5.10.2",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "@prisma/client": "^5.10.2",
        "cron": "^3.1.6",
        "dotenv": "^16.4.5",
        "env-var": "^7.4.1",
        "mongodb": "^6.4.0",
        "mongoose": "^8.2.1",
        "nodemailer": "^6.9.11"
    }
}
